{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules/@types/react-native/globals.d.ts",
    "./node_modules",
    "./src/expo"
  ]
}
